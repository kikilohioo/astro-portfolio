---
// Sample work experience data - you can replace this with your actual data
const workExperience = [
  {
    company: "Tech Innovations Corp",
    role: "Senior Frontend Developer",
    duration: "2022 - Present",
    description:
      "Led development of React applications, mentored junior developers, and implemented modern UI/UX practices.",
    technologies: ["React", "TypeScript", "Next.js"],
  },
  {
    company: "Digital Solutions Ltd",
    role: "Frontend Developer",
    duration: "2020 - 2022",
    description:
      "Built responsive web applications, collaborated with design teams, and optimized application performance.",
    technologies: ["Vue.js", "JavaScript", "Sass"],
  },
  {
    company: "StartupHub Inc",
    role: "Junior Web Developer",
    duration: "2019 - 2020",
    description:
      "Developed user interfaces, fixed bugs, and learned modern web development practices in an agile environment.",
    technologies: ["HTML", "CSS", "JavaScript"],
  },
  {
    company: "Freelance",
    role: "Web Developer",
    duration: "2018 - 2019",
    description:
      "Created websites for small businesses, learned client communication, and built foundational coding skills.",
    technologies: ["WordPress", "PHP", "MySQL"],
  },
];
---

<section class="timeline-container scrollbar-hide px-20">
  <h2 class="timeline-title text-teal-300">Work Experience</h2>

  <div class="timeline scrollbar-hide w-full">
    <div class="timeline-line"></div>

    {
      workExperience.map((job, index) => (
        <div class="timeline-item" data-index={index}>
          <div class="timeline-point">
            <div class="timeline-dot" />
          </div>

          <div class="timeline-content">
            <div class="timeline-card">
              <div class="card-header">
                <h3 class="job-title">{job.role}</h3>
                <h4 class="company-name">{job.company}</h4>
                <span class="duration">{job.duration}</span>
              </div>

              <p class="job-description">{job.description}</p>

              <div class="technologies">
                {job.technologies.map((tech) => (
                  <span class="tech-tag">{tech}</span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>

<style>
  .timeline-container {
    margin: 0 auto;
    padding-top: 10rem;
    height: 100%;
    font-family:
      Inter,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
  }

  .timeline-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 3rem;
    letter-spacing: -0.025em;
  }

  .timeline {
    position: relative;
    display: flex;
    overflow-x: auto;
    padding: 2rem 0 3rem 0;
    gap: 2rem;
    scroll-behavior: smooth;
  }

  .timeline::-webkit-scrollbar {
    height: 6px;
  }

  .timeline::-webkit-scrollbar-track {
    background: #f3f4f6;
    border-radius: 3px;
  }

  .timeline::-webkit-scrollbar-thumb {
    background: #d1d5db;
    border-radius: 3px;
  }

  .timeline::-webkit-scrollbar-thumb:hover {
    background: #9ca3af;
  }

  .timeline-line {
    position: absolute;
    width: 130%;
    top: 2.4rem;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, #46ecd5 0%, #36a99a 50%, #46ecd5 100%);
    z-index: -1;
  }

  .timeline-item {
    position: relative;
    min-width: 320px;
    max-width: 380px;
    flex-shrink: 0;
  }

  .timeline-point {
    position: relative;
    display: flex;
    justify-content: center;
    margin-bottom: 1.5rem;
    z-index: 2;
  }

  .timeline-dot {
    width: 16px;
    height: 16px;
    background: #409c90;
    border: 4px solid #ffffff;
    border-radius: 50%;
    box-shadow: 0 0 0 4px #4ca69a;
    transition: all 0.3s ease;
  }

  .timeline-item:hover .timeline-dot {
    transform: scale(1.2);
    box-shadow: 0 0 0 6px rgba(59, 246, 199, 0.3);
  }

  .timeline-content {
    display: flex;
    justify-content: center;
  }

  .timeline-card {
    background: #ffffff;
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow:
      0 4px 6px -1px rgba(0, 0, 0, 0.1),
      0 2px 4px -1px rgba(0, 0, 0, 0.06);
    border: 1px solid #e5e7eb;
    transition: all 0.3s ease;
    width: 100%;
  }

  .timeline-card:hover {
    transform: translateY(-4px);
    box-shadow:
      0 20px 25px -5px rgba(0, 0, 0, 0.1),
      0 10px 10px -5px rgba(0, 0, 0, 0.04);
    border-color: #3b82f6;
  }

  .card-header {
    margin-bottom: 1rem;
  }

  .job-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #1f2937;
    margin: 0 0 0.25rem 0;
    line-height: 1.4;
  }

  .company-name {
    font-size: 1.1rem;
    font-weight: 500;
    color: #3b82f6;
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .duration {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 500;
    color: #6b7280;
    background: #f3f4f6;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    letter-spacing: 0.025em;
  }

  .job-description {
    color: #4b5563;
    font-size: 0.95rem;
    line-height: 1.6;
    margin: 0 0 1rem 0;
  }

  .technologies {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tech-tag {
    font-size: 0.75rem;
    font-weight: 500;
    color: #1e40af;
    background: #dbeafe;
    padding: 0.25rem 0.5rem;
    border-radius: 8px;
    letter-spacing: 0.025em;
    transition: all 0.2s ease;
  }

  .tech-tag:hover {
    background: #bfdbfe;
    transform: translateY(-1px);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .timeline-container {
      padding: 2rem 1rem;
    }

    .timeline-title {
      font-size: 2rem;
      margin-bottom: 2rem;
    }

    .timeline {
      flex-direction: column;
      gap: 2rem;
      padding: 1rem 0;
    }

    .timeline-line {
      display: none;
    }

    .timeline-item {
      min-width: unset;
      max-width: unset;
      width: 100%;
    }

    .timeline-point {
      margin-bottom: 1rem;
    }

    .timeline-dot {
      width: 12px;
      height: 12px;
      box-shadow: 0 0 0 3px #3b82f6;
    }

    .timeline-card {
      padding: 1.25rem;
    }

    .job-title {
      font-size: 1.1rem;
    }

    .company-name {
      font-size: 1rem;
    }
  }

  /* Desktop enhancements */
  @media (min-width: 1024px) {
    .timeline-item {
      min-width: 380px;
      max-width: 420px;
    }

    .timeline-card {
      padding: 2rem;
    }
  }

  /* Animation for timeline items */
  .timeline-item {
    opacity: 0;
    transform: translateY(20px);
    animation: slideInUp 0.6s ease forwards;
  }

  .timeline-item:nth-child(2) {
    animation-delay: 0.1s;
  }
  .timeline-item:nth-child(3) {
    animation-delay: 0.2s;
  }
  .timeline-item:nth-child(4) {
    animation-delay: 0.3s;
  }
  .timeline-item:nth-child(5) {
    animation-delay: 0.4s;
  }

  @keyframes slideInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Smooth scrolling hints */
  .timeline::before {
    content: "← Scroll to explore →";
    position: absolute;
    bottom: -2rem;
    left: 50%;
    transform: translateX(-50%);
    font-size: 0.875rem;
    color: #9ca3af;
    pointer-events: none;
  }

  @media (max-width: 768px) {
    .timeline::before {
      display: none;
    }
  }
</style>
