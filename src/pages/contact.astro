---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
import Terminal from "../components/Terminal.astro";

const ctas = [
  {
    label: "Email",
    href: "mailto:vieracaiqui@gmail.com",
    icon: "email",
    gradient: "from-red-500 to-pink-700",
  },
  {
    label: "LinkedIn",
    href: "https://www.linkedin.com/in/caiquiviera",
    icon: "linkedin",
    gradient: "from-blue-600 to-indigo-500",
  },
  {
    label: "GitHub",
    href: "https://github.com/",
    icon: "github",
    gradient: "from-gray-700 to-gray-900",
  },
  {
    label: "WhatsApp",
    href: "https://wa.me/59895448562",
    gradient: "from-green-500 to-emerald-600",
    icon: "whatsapp",
  },
];
---

<Layout>
  <section
    class="min-h-screen flex flex-col items-center justify-center px-6 pt-20 bg-gradient-to-br from-teal-700 via-teal-800 to-teal-900 text-white"
  >
    <!-- Header -->
    <div class="max-w-2xl text-center mb-14">
      <h1
        transition:name="contact-title"
        class="text-4xl sm:text-5xl font-extrabold mb-6 bg-gradient-to-r from-emerald-300 via-teal-200 to-lime-300 bg-clip-text text-transparent"
      >
        Get in Touch
      </h1>
      <p class="text-gray-200 text-lg leading-relaxed">
        Feel free to reach out for collaborations, freelance projects, or just
        to say hi âœ¨
      </p>
    </div>

    <!-- Grid: Form + Quick Links -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 w-full max-w-6xl -mt-10">
      <!-- Contact Form -->
      <form
        action="#"
        method="POST"
        class="w-full bg-white/10 backdrop-blur-md rounded-2xl p-10 shadow-xl border border-white/20 space-y-6 flex flex-col"
      >
        <div class="flex flex-col gap-2">
          <label for="name" class="text-sm font-medium text-gray-100">
            Name
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-3 rounded-lg bg-teal-900/70 border border-teal-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-400 focus:border-emerald-400 transition"
            placeholder="Your name"
          />
        </div>

        <div class="flex flex-col gap-2">
          <label for="email" class="text-sm font-medium text-gray-100">
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-3 rounded-lg bg-teal-900/70 border border-teal-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-400 focus:border-emerald-400 transition"
            placeholder="you@example.com"
          />
        </div>

        <div class="flex flex-col gap-2">
          <label for="message" class="text-sm font-medium text-gray-100">
            Message
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full px-4 py-3 rounded-lg bg-teal-900/70 border border-teal-600 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-emerald-400 focus:border-emerald-400 transition resize-none"
            placeholder="Write your message..."></textarea>
        </div>

        <button
          type="submit"
          class="w-full py-3 px-6 rounded-lg font-semibold text-white shadow-lg mt-4 bg-gradient-to-r from-emerald-500 via-emerald-500 to-teal-600
       hover:via-teal-400 cursor-pointer transition-colors duration-500"
        >
          Send Message
        </button>
      </form>

      <!-- Quick Links -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {
          ctas.map((cta) => (
            <div
              transition:name={`${cta.icon}-btn-cta`}
              class={`flex rounded-2xl w-full justify-center px-6 py-4 text-xl font-semibold shadow-lg 
                      bg-gradient-to-r ${cta.gradient} 
                      hover:scale-105 hover:shadow-2xl transition-transform text-center cursor-pointer items-center`}
            >
              <Icon name={cta.icon} size={40} class="text-white drop-shadow" />
              <a
                href={cta.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-2xl ml-5 text-white text-center"
              >
                {cta.label}
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </section>
  <Terminal display="minimized" position="right" />
</Layout>
